{
  "manifest_version": 3,
  "name": "AI-Prophet (Dev)",
  "version": "1.0",
  "description": "不動産自動巡回エージェント - プロトタイプ",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}